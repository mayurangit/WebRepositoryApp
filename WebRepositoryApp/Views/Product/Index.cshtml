@model List<Product>


    <div class="container d-flex align-items-center justify-content-center bg-light pt-lg-5 pb-lg-5">
        <div class="col col-6">
            <h3>Product List</h3>
            <table class="table table-striped">
                <thead>

                    <tr>
                        <th>Product Name</th>
                        <th>Product Price</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var x in Model)
                {
                    <tr>
                        <td>@x.ProductName</td>
                        <td>@x.Price</td>
                        <td><a asp-controller="Product" asp-action="" class="btn btn-sm btn-success">Edit</a></td>
                        <td><a asp-controller="Product" asp-action="" class="btn btn-sm btn-danger">Delete</a></td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </<div>


