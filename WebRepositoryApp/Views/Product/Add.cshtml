@model Product



<div class="container d-flex align-items-center justify-content-center bg-light pt-lg-5 pb-lg-5">
    <div class="">
        <h3>Add New Product</h3>
        <form action="" method="post">

            <div class="form-group col-md-12">
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" class="form-control">
                <span class="text-danger" asp-validation-for="ProductName"> </span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span class="text-danger" asp-validation-for="Price"> </span>
            </div>
     
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <br />
        <br />
        <h5>View All Product <a asp-controller="Product" asp-action="Index">Click Here</a></h5>
    </div>
</div>


 